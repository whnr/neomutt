	@mv $*.Tpo $*.Po

# make sure git_ver.h is built before any .o files
$(ALLOBJS):	git_ver.h

# mutt
$(NEOMUTT): $(GENERATED) $(NEOMUTTOBJS) $(MUTTLIBS)
	$(CC) -o $@ $(NEOMUTTOBJS) $(MUTTLIBS) $(LDFLAGS) $(LIBS)

